<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExaCnc.Views.TorneoDetallePage"
    BindingContext="{Binding Main ,Source={StaticResource Locator}}"
    Title="informacion">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding TorneoDetalle}">            
            <StackLayout
                Padding="5">
                <Label
                    FontSize="Large"
                    FontAttributes="Bold"
                    Text="{Binding  TorneoDetalle.Descripcion}"
                    >
                    
                </Label>
                <Label
                    FontSize="Large"
                    FontAttributes="Bold"
                    Text="{Binding  TorneoDetalle.Codigo}"
                    >

                </Label>
                <Label
                    FontSize="Large"
                    FontAttributes="Bold"
                    Text="cesar detalles"
                    >

                </Label>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>